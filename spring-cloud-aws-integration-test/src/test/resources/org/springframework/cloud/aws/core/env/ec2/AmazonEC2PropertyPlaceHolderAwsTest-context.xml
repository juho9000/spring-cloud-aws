<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:els-context="http://www.springframework.org/schema/cloud/aws/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/cloud/aws/context http://www.springframework.org/schema/cloud/aws/context/elasticspring-context-1.0.xsd">


	<import resource="classpath:Integration-test-context.xml" />

	<els-context:context-instance-placeholder instance-id-provider="testStackEnvironment"
											  user-tags-map="instanceData" />

	<bean class="org.springframework.cloud.aws.core.env.ec2.SimpleConfigurationBean">
		<property name="value1" value="#{instanceData['tag1']}" />
		<property name="value2" value="#{instanceData['tag2']}" />
		<property name="value3" value="#{instanceData['tag3']}" />
		<property name="value4" value="#{instanceData['tag4']}" />
	</bean>
</beans>