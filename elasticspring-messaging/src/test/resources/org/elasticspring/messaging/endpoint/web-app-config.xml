<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="first" class="org.elasticspring.messaging.endpoint.NotificationEndpointHttpRequestHandler">
		<constructor-arg name="messageConverter">
			<bean class="org.elasticspring.messaging.support.converter.NotificationMessageConverter" />
		</constructor-arg>
		<constructor-arg name="listenerMethod" value="handleNotification" />
		<constructor-arg name="target" ref="target" />
	</bean>

	<bean id="target"
		  class="org.elasticspring.messaging.endpoint.NotificationEndpointHttpRequestHandlerTest$SimpleHttpRequestHandler" />

</beans>