<xsd:schema xmlns="http://www.elasticspring.org/schema/messaging"
			xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			targetNamespace="http://www.elasticspring.org/schema/messaging"
			elementFormDefault="qualified" attributeFormDefault="unqualified">

	<xsd:element name="annotation-driven">
		<xsd:annotation>
			<xsd:documentation>
				Scans the classes annotated with org.elasticspring.messaging.annotation.QueueListener or
				org.elasticspring.messaging.annotation.TopicListener and registers
				them as endpoints for receiving messages from SQS or SNS.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>

</xsd:schema>