<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:els-context="http://www.elasticspring.org/schema/context"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://www.elasticspring.org/schema/context http://www.elasticspring.org/schema/context/elasticspring-context-1.0.xsd">

	<els-context:context-credentials>
		<els-context:simple-credentials access-key="${accessKey}" secret-key="${secretKey}" />
	</els-context:context-credentials>

	<els-context:context-region region="EU_WEST_1" />

	<context:property-placeholder location="file://${els.config.dir}/access.properties" />

	<bean id="amazonCloudFormationClient" class="com.amazonaws.services.cloudformation.AmazonCloudFormationClient">
		<constructor-arg ref="#{T(org.elasticspring.context.credentials.CredentialsProviderFactoryBean).CREDENTIALS_PROVIDER_BEAN_NAME}" />
	</bean>

	<bean id="testStackEnvironment" class="org.elasticspring.support.TestStackEnvironment">
		<constructor-arg name="amazonCloudFormationClient" ref="amazonCloudFormationClient"/>
	</bean>

	<bean id="testStackInstanceIdService" class="org.elasticspring.support.TestStackInstanceIdService" factory-method="fromStackOutputKey">
		<constructor-arg name="stackName" value="#{T(org.elasticspring.support.TestStackEnvironment).DEFAULT_STACK_NAME}"/>
		<constructor-arg name="outputKey" value="#{T(org.elasticspring.support.TestStackEnvironment).INSTANCE_ID_STACK_OUTPUT_KEY}"/>
		<constructor-arg name="amazonCloudFormationClient" ref="amazonCloudFormationClient"/>
	</bean>

</beans>