<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="classpath:Integration-test-context.xml" />

	<bean id="amazonSqsClient" class="com.amazonaws.services.sqs.AmazonSQSClient">
		<constructor-arg
				ref="#{T(org.elasticspring.context.credentials.CredentialsProviderFactoryBean).CREDENTIALS_PROVIDER_BEAN_NAME}" />
	</bean>

	<bean id="stringMessage" class="org.springframework.messaging.core.GenericMessagingTemplate">
		<property name="destinationResolver" ref="destinationResolver"/>
	</bean>

	<bean id="objectMessage" class="org.springframework.messaging.core.GenericMessagingTemplate">
		<property name="destinationResolver" ref="destinationResolver"/>
		<property name="messageConverter">
			<bean class="org.elasticspring.messaging.support.converter.ObjectMessageConverter" />
		</property>
	</bean>

	<bean id="jsonMessage" class="org.springframework.messaging.core.GenericMessagingTemplate">
		<property name="destinationResolver" ref="destinationResolver"/>
		<property name="messageConverter">
			<bean class="org.elasticspring.messaging.support.converter.MarshallingMessageConverter">
				<constructor-arg name="marshaller" ref="marshaller" />
				<constructor-arg name="unmarshaller" ref="marshaller" />
				<constructor-arg name="encoding" value="UTF-8" />
			</bean>
		</property>
	</bean>

	<bean id="marshaller" class="org.springframework.oxm.xstream.XStreamMarshaller">
		<property name="mode" value="#{T(com.thoughtworks.xstream.XStream).NO_REFERENCES}" />
		<property name="streamDriver">
			<bean class="com.thoughtworks.xstream.io.json.JettisonMappedXmlDriver" />
		</property>
	</bean>

	<bean id="destinationResolver" class="org.elasticspring.messaging.support.destination.DynamicQueueDestinationResolver">
		<constructor-arg ref="amazonSqsClient" />
	</bean>

</beans>