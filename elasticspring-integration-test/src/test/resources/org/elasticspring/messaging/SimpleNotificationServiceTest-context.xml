<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="classpath:Integration-test-context.xml" />

	<bean id="amazonSns" class="com.amazonaws.services.sns.AmazonSNSClient">
		<constructor-arg
				ref="#{T(org.elasticspring.context.credentials.CredentialsProviderFactoryBean).CREDENTIALS_PROVIDER_BEAN_NAME}" />
	</bean>

	<bean id="cachingDestinationResolver"
		  class="org.elasticspring.messaging.support.destination.CachingDestinationResolver">
		<constructor-arg>
			<bean id="dynamicTopicDestinationResolver"
				  class="org.elasticspring.messaging.support.destination.DynamicTopicDestinationResolver">
				<constructor-arg ref="amazonSns" />
				<property name="autoCreate" value="true" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="simpleNotificationServiceMessageTemplate"
		  class="org.elasticspring.messaging.core.sns.SimpleNotificationServiceMessageTemplate">
		<constructor-arg ref="amazonSns" />
		<property name="destinationResolver" ref="cachingDestinationResolver" />
		<property name="defaultDestinationName" value="#{testStackEnvironment.getByLogicalId('MySNSTopic')}" />
	</bean>

	<bean id="amazonSqs" class="com.amazonaws.services.sqs.AmazonSQSClient">
		<constructor-arg
				ref="#{T(org.elasticspring.context.credentials.CredentialsProviderFactoryBean).CREDENTIALS_PROVIDER_BEAN_NAME}" />

	</bean>

	<bean class="org.elasticspring.messaging.core.sqs.SimpleQueueServiceMessageTemplate">
		<constructor-arg ref="amazonSqs" />
		<property name="defaultDestinationName" value="#{testStackEnvironment.getByLogicalId('NotificationQueue')}" />
		<property name="messageConverter">
			<bean class="org.elasticspring.messaging.support.converter.NotificationMessageConverter" />
		</property>
	</bean>

</beans>