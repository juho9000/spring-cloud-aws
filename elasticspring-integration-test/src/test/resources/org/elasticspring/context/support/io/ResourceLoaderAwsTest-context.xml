<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:els-context="http://www.elasticspring.org/schema/context"
	   xmlns:task="http://www.springframework.org/schema/task" xmlns="http://www.springframework.org/schema/beans"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd   http://www.elasticspring.org/schema/context http://www.elasticspring.org/schema/context/elasticspring-context-1.0.xsd http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd">

	<import resource="classpath:Integration-test-context.xml" />

	<els-context:context-resource-loader task-executor="executor" />

	<task:executor id="executor" pool-size="2-10" queue-capacity="0" rejection-policy="CALLER_RUNS" />

	<els-context:stack-configuration stack-name="IntegrationTestStack" />

</beans>