<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath:Integration-test-context.xml" />

	<bean class="org.elasticspring.core.env.ec2.SimpleConfigurationBean">
		<property name="value1" value="#{environment.key1}" />
		<property name="value2" value="#{environment.key2}" />
		<property name="value3" value="${key3}" />
		<property name="value4" value="${instance-id}" />
	</bean>

	<bean class="org.elasticspring.context.config.AmazonEc2InstanceDataPropertySourcePostProcessor" />

</beans>