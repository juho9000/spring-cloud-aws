<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="classpath:Integration-test-context.xml" />

	<bean name="instanceData" class="org.elasticspring.core.env.ec2.AmazonEc2InstanceUserTagsFactoryBean">
		<constructor-arg name="amazonEc2" ref="amazonEC2Client" />
		<constructor-arg name="idProvider" ref="testStackEnvironment" />
	</bean>


	<bean id="amazonEC2Client" class="com.amazonaws.services.ec2.AmazonEC2Client">
		<constructor-arg
				ref="#{T(org.elasticspring.context.credentials.CredentialsProviderFactoryBean).CREDENTIALS_PROVIDER_BEAN_NAME}" />
	</bean>

	<bean class="org.elasticspring.core.env.ec2.SimpleConfigurationBean">
		<property name="value1" value="#{instanceData['tag1']}" />
		<property name="value2" value="#{instanceData['tag2']}" />
		<property name="value3" value="#{instanceData['tag3']}" />
		<property name="value4" value="#{instanceData['tag4']}" />
	</bean>
</beans>