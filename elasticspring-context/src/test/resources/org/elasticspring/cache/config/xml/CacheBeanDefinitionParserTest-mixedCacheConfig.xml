<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:els-cache="http://www.elasticspring.org/schema/cache"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd 
	   http://www.elasticspring.org/schema/cache
	   http://www.elasticspring.org/schema/cache/elasticspring-cache-1.0.xsd">

	<els-cache:cache-manager id="cacheManager">
		<els-cache:cache address="localhost:#{systemProperties['memcachedPort']}" name="memc" />
		<els-cache:cache-ref ref="memcached" />
	</els-cache:cache-manager>

	<bean id="memcached" class="org.elasticspring.cache.SimpleSpringMemcached">
		<constructor-arg name="cacheName" value="memcached" />
		<constructor-arg>
			<bean class="org.elasticspring.cache.StaticMemcachedFactoryBean">
				<constructor-arg name="address" value="localhost:#{systemProperties['memcachedPort']}" />
			</bean>
		</constructor-arg>
	</bean>
</beans>