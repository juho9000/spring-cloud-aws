<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:els-context="http://www.elasticspring.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           	http://www.elasticspring.org/schema/context
           	http://www.elasticspring.org/schema/context/elasticspring-context-1.0.xsd">

	<els-context:cache-manager id="cacheManager">
		<els-context:cache cache="memc"  address="localhost:#{systemProperties['memcachedPort']}" expiration="10000" name="memc"
						   allowClear="true"/>
	</els-context:cache-manager>

	<bean name="memc" class="com.google.code.ssm.spring.SSMCache">
		<constructor-arg name="cache">
			<bean class="com.google.code.ssm.CacheFactory">
				<property name="cacheName" value="memc" />
				<property name="cacheClientFactory">
					<bean class="com.google.code.ssm.providers.spymemcached.MemcacheClientFactoryImpl" />
				</property>
				<property name="addressProvider">
					<bean class="com.google.code.ssm.config.DefaultAddressProvider">
						<property name="address" value="localhost:#{systemProperties['memcachedPort']}" />
					</bean>
				</property>
				<property name="configuration">
					<bean class="com.google.code.ssm.providers.CacheConfiguration">
						<property name="consistentHashing" value="true" />
					</bean>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg name="expiration" value="300" />
		<constructor-arg name="allowClear" value="false" />
	</bean>
</beans>
