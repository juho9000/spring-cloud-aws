<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<bean id="resourceLoader" class="org.elasticspring.core.io.s3.SimpleStorageResourceLoader">
		<constructor-arg>
			<bean class="com.amazonaws.services.s3.AmazonS3Client">
				<constructor-arg>
					<bean class="com.amazonaws.auth.SystemPropertiesCredentialsProvider" />
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean class="org.elasticspring.context.support.io.ResourceLoaderBeanPostProcessor">
		<constructor-arg ref="resourceLoader" />
	</bean>

	<context:annotation-config />


</beans>